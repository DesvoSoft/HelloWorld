    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const playButton = document.getElementById('playButton');
            const videoBackground = document.getElementById('videoBackground');

            // URL del video de YouTube con controles y sonido
            const videoUrl = 'https://www.youtube.com/embed/5-sfG8BV8wU?autoplay=1&controls=0&loop=0&amp;vq=hd1080';

            // Funcion para reproducir el video y mostrar el div
            if (playButton && videoBackground) {
                playButton.addEventListener('click', function () {
                    // Inyectar el video de YouTube en el fondo si aun no se ha inyectado
                    if (!videoBackground.innerHTML) {
                        videoBackground.innerHTML = `<iframe width="100%" height="100%" src="${videoUrl}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>`;
                    }

                    // Mostrar el div de videoBackground
                    videoBackground.style.display = 'block';
                });
            }
        });
    </script>
